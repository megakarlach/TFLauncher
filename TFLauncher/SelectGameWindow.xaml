            </Button>
            <Button x:Name="OpenCunnyCrisis" Content="Play Kunny Krysis" MouseEnter="ButtonSFX_MouseEnter" MouseLeave="ButtonSFX_MouseLeave" HorizontalAlignment="Left" Margin="14,275,0,0" Width="40" FontFamily="Tahoma" FontSize="36" FontWeight="Bold" Click="OpenCunnyCrisis_Click" OpacityMask="#FF81E4D7" BorderBrush="#FF90DAC6" Foreground="#00000000" Height="48" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="gamecover/battlelog/icon_pussyopussyo.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="LauncherNameLabel" Content="Select Game" Margin="10,0,1090,10" VerticalAlignment="Bottom" Foreground="White" FontSize="22" HorizontalAlignment="Center"/>
            <Button x:Name="OpenTetRizz" Content="Play TetRizz" MouseEnter="ButtonSFX_MouseEnter" MouseLeave="ButtonSFX_MouseLeave" HorizontalAlignment="Left" Margin="14,328,0,0" Width="40" FontFamily="Tahoma" FontSize="36" FontWeight="Bold" Click="OpenTetRizz_Click" OpacityMask="#FFCD90DA" BorderBrush="#FFCD90DA" Foreground="#00000000" Height="48" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="gamecover/battlelog/icon_tetrizz.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="OpenTetRizzEnhanced" Content="Play TetRizz Enhanced" MouseEnter="ButtonSFX_MouseEnter" MouseLeave="ButtonSFX_MouseLeave" HorizontalAlignment="Left" Margin="14,381,0,0" Width="40" FontFamily="Tahoma" FontSize="36" FontWeight="Bold" Click="OpenTetRizzEnhanced_Click" OpacityMask="#FFCD90DA" BorderBrush="#FFCD90DA" Foreground="#00000000" Height="48" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="gamecover/battlelog/icon_tetrizz_enhanced.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="OpenTetFuck5000Enhanced" Content="Play TetFuck V" HorizontalAlignment="Left" Margin="14,222,0,0" Width="40" FontFamily="Tahoma" FontSize="36" FontWeight="Bold" Click="OpenTetFuck5000Enhanced_Click" OpacityMask="#FF65C95C" BorderBrush="#FF82BF5F" Foreground="#00000000" Height="48" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="gamecover/battlelog/icon_tetfuckv_enhanced.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <!-- select game toolbar -->
        <Label x:Name="label_SELECT" Content="SELECT" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="White" FontFamily="Tahoma" FontSize="20" Margin="0,0,69,42"/>
        <Label x:Name="labelver" Content="TetFuck Launcher v26.0.0 (build 10612 | RTM-PMFB)&#xA;© 2025 LK (TetFuck Company) &amp; MEGA Limited&#xA;https://playtetfuck.wordpress.com" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="White" FontFamily="Tahoma" FontSize="10"/>
        <Image x:Name="image1" Margin="0,0,151,42" Source="materials/xbox_btn.png" Stretch="None" HorizontalAlignment="Right" Width="32" Height="32" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
