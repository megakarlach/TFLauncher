                    <ImageBrush ImageSource="gamecover/battlelog/icon_tetfuck2142.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="OpenTetFuck4000" Content="Play TetFuck 4K" MouseEnter="ButtonSFX_MouseEnter" MouseLeave="ButtonSFX_MouseLeave" HorizontalAlignment="Left" Margin="14,63,0,0" Width="40" FontFamily="Tahoma" FontSize="36" FontWeight="Bold" Click="OpenTetFuck4000_Click" OpacityMask="#FFE8DBC4" BorderBrush="#FFDAC5AE" Foreground="#00000000" Height="48" VerticalAlignment="Top">
