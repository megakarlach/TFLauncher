                    <GradientStop Color="#FFC347AC" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button> -->
        <!-- Music setlist -->
        <Button x:Name="PlayTF2142Mus1Btn" MouseEnter="ButtonSFX_MouseEnter" MouseLeave="ButtonSFX_MouseLeave"  Content="Play now with&#xD;&#xA;Music setlist #1" HorizontalAlignment="Center" Width="160" Margin="436,593,838,93" Click="PlayTF2142Mus1Btn_Click" BorderBrush="#FFA0D9F7" Foreground="Black" FontSize="14" FontWeight="Bold" Height="160" VerticalAlignment="Center">
            <Button.Background>
