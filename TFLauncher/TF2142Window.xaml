            </Button.Background>
        </Button>
        <Button x:Name="PlayTF2142Mus2Btn" MouseEnter="ButtonSFX_MouseEnter" MouseLeave="ButtonSFX_MouseLeave"  Content="Play now with&#xD;&#xA;Music setlist #2" HorizontalAlignment="Center" Width="128" Margin="601,609,705,109" Click="PlayTF2142Mus2Btn_Click" BorderBrush="#FFA0D9F7" Foreground="Black" FontSize="14" FontWeight="Bold" Height="128" VerticalAlignment="Center">
            <Button.Background>
